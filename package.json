{
  "name": "add-gitignore",
  "displayName": "Add gitignore menu",
  "publisher": "kurata321",
  "version": "0.0.3",
  "description": "Add files to .gitignore or .git/info/exclude",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kurata321/add-gitignore.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "add-gitignore.addToGitIgnore",
        "title": "Add to .gitignore"
      },
      {
        "command": "add-gitignore.addToGitExclude",
        "title": "Add to .git/info/exclude"
      }
    ],
    "submenus": [
      {
        "id": "add-gitignore.submenu",
        "label": "Git Ignore"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "add-gitignore.submenu",
          "group": "7_modification"
        }
      ],
      "add-gitignore.submenu": [
        {
          "command": "add-gitignore.addToGitIgnore",
          "group": "navigation"
        },
        {
          "command": "add-gitignore.addToGitExclude",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}